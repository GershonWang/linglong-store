{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["element-plus/global"],
    "baseUrl": ".",
    "paths": {
      "@/*":["./src/*"]
    }
  },
  "include": [
    "src",
    "types/auto-imports.d.ts"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
